class Solution {
    public int numSquares(int n) {
        return solve(n);
    }

    public int solve(int n) {
        if(n == 0) return 0;
        if(n < 0) return Integer.MAX_VALUE;
        int ans = Integer.MAX_VALUE;
        for(int i=1;i*i<=n;i++) {
            ans = Math.min(
                ans,
                1 + solve(n-(i*i))
            );
        }
        return ans;
    }
}
